{
	resource:
	{
		pipeline: md

		headers:
		{
			# 2 years; submit to https://hstspreload.org/ when ready
			"Strict-Transport-Security": max-age=63072000;includeSubDomains;preload
		}

		sass:
		{
			precision: 5
		}

		compression:
		{
			gzip:
			{
				iterations: 15

				# Set to 0 for infinite
				maximum_block_splits: 15
			}

			brotli:
			{
				compressMode: utf8
			}
		}
	}
}
